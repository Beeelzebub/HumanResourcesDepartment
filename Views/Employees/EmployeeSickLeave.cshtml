@model SickLeave

<form asp-action="EmployeeSickLeave">
    <div class="mb-5 mt-5 row justify-content-center">
        <h1 class="text-center">Больничный</h1>
    </div>
    <hr />
    <input type="hidden" asp-for="EmployeeId" />
    <div class="row justify-content-center">
        <div class="col-3">
            <div class="form-group">
                <label asp-for="SickLeaveStartDate" class="control-label"></label>
                <input type="date" asp-for="SickLeaveStartDate" class="form-control" />
                <span asp-validation-for="SickLeaveStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SickLeaveEndDate" class="control-label"></label>
                <input type="date" asp-for="SickLeaveEndDate" class="form-control" />
                <span asp-validation-for="SickLeaveEndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SickLeaveReason" class="control-label"></label>
                <input asp-for="SickLeaveReason" class="form-control" />
                <span asp-validation-for="SickLeaveReason" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="mt-5 col-2">
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-block btn-outline-primary" />
            </div>
        </div>

    </div>
    <div class="row justify-content-center">
        <a asp-action="Index">Отмена</a>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
